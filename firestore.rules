
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================
    // üîê FUNCIONES REUTILIZABLES
    // ============================================================

    // Usuario autenticado
    function isSignedIn() {
      return request.auth != null;
    }

    // Usuario due√±o de su propio documento
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Usuario administrador
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'futsaldex@gmail.com' ||
        (
          exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin'
        )
      );
    }

    // Due√±o de un equipo
    function isTeamOwner(teamId) {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/teams/$(teamId)) &&
             get(/databases/$(database)/documents/teams/$(teamId)).data.ownerId == request.auth.uid;
    }

    // Miembro de un equipo (o due√±o)
    function isTeamMember(teamId) {
      let teamData = get(/databases/$(database)/documents/teams/$(teamId)).data;
      return isSignedIn() &&
             exists(/databases/$(database)/documents/teams/$(teamId)) &&
             (request.auth.uid == teamData.ownerId || request.auth.uid in teamData.memberIds);
    }

    // ============================================================
    // üë§ USERS
    // ============================================================

    match /users/{userId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId) || isAdmin();

      // Favoritos
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ============================================================
    // üèãÔ∏è EXERCISES
    // ============================================================

    match /exercises/{exerciseId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // ============================================================
    // üèüÔ∏è TEAMS
    // ============================================================

    match /teams/{teamId} {
      
      // Permitir que cualquier usuario autenticado pueda listar los equipos para que la UI los filtre.
      // La seguridad de lectura de datos sensibles se hace en el 'get'.
      allow list: if isSignedIn();

      // Leer info del equipo si eres miembro o admin
      allow get: if isTeamMember(teamId) || isAdmin();

      // Crear equipo
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;

      // Modificar (incluye a√±adir miembros) o eliminar
      // Permitimos update si es el due√±o O si el que hace el cambio se est√° a√±adiendo a s√≠ mismo (aceptar invitaci√≥n).
      allow update: if isTeamOwner(teamId) || 
                       (isSignedIn() && request.auth.uid in request.resource.data.memberIds) ||
                       isAdmin();
      allow delete: if isTeamOwner(teamId) || isAdmin();

      // --- üìÖ Asistencias ---
      match /attendance/{date} {
        allow get, list, create, update, delete: if isTeamMember(teamId) || isAdmin();
      }

      // --- üßç Jugadores ---
      match /players/{playerId} {
        allow list: if isTeamMember(teamId) || isAdmin();
        allow get: if isTeamMember(teamId) || isAdmin();
        allow create, update, delete: if isTeamOwner(teamId) || isAdmin();
      }

      // --- üë• Staff T√©cnico ---
      match /staff/{staffId} {
        allow list, get: if isTeamMember(teamId) || isAdmin();
        allow create, update, delete: if isTeamOwner(teamId) || isAdmin();
      }
    }

    // ============================================================
    // üìÖ MATCHES / SESSIONS / INVITATIONS
    // ============================================================

    match /matches/{matchId} {
      allow get, list, create, update, delete: if isSignedIn();
    }

    match /sessions/{sessionId} {
      allow get, list, create, update, delete: if isSignedIn();
    }

    match /invitations/{invitationId} {
        // Leer si eres el invitado o el que invita
        allow read: if isSignedIn() && (request.auth.token.email == resource.data.inviteeEmail || request.auth.uid == resource.data.inviterId);
        
        // El que invita puede crear la invitaci√≥n
        allow create: if isSignedIn() && request.resource.data.inviterId == request.auth.uid;
        
        // El invitado puede actualizarla para completarla
        allow update: if isSignedIn() && request.auth.token.email == resource.data.inviteeEmail;
        
        // Solo el que invita o un admin puede borrarla
        allow delete: if isSignedIn() && (request.auth.uid == resource.data.inviterId || isAdmin());
    }


    // ============================================================
    // ‚ùå Colecciones obsoletas (bloqueadas)
    // ============================================================

    match /teamMembers/{memberId} { allow read, write: if false; }
    match /referrals/{referralId} { allow read, write: if false; }
  }
}

    