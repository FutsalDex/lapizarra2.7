rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================
    // üîê FUNCIONES REUTILIZABLES
    // ============================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'futsaldex@gmail.com' ||
        (
          exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin'
        )
      );
    }

    function isTeamOwner(teamId) {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/teams/$(teamId)) &&
             get(/databases/$(database)/documents/teams/$(teamId)).data.ownerId == request.auth.uid;
    }

    function isTeamMember(teamId) {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/teams/$(teamId)) &&
             (
               request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.memberIds ||
               isTeamOwner(teamId)
             );
    }

    // ============================================================
    // üë§ USERS
    // ============================================================

    match /users/{userId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId) || isAdmin();

      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ============================================================
    // üèãÔ∏è EXERCISES
    // ‚úÖ CORRECCI√ìN PRINCIPAL: create exige que userId del documento
    //    sea igual al uid del usuario autenticado.
    //    Esto evita que se guarden documentos con userId incorrecto
    //    y garantiza que update/delete siempre funcionen.
    // ============================================================

    match /exercises/{exerciseId} {
      allow get: if true;
      allow list: if true;

      // üîë CLAVE: forzamos que el campo userId del documento
      // sea exactamente el uid del usuario que est√° creando
      allow create: if isSignedIn()
                    && request.resource.data.userId == request.auth.uid;

      // update y delete: el due√±o o un admin
      allow update: if isSignedIn()
                    && (
                      resource.data.userId == request.auth.uid
                      || isAdmin()
                    );

      allow delete: if isSignedIn()
                    && (
                      resource.data.userId == request.auth.uid
                      || isAdmin()
                    );
    }

    // ============================================================
    // üèüÔ∏è TEAMS
    // ============================================================

    match /teams/{teamId} {
      allow get: if isTeamMember(teamId) || isAdmin();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isTeamOwner(teamId) || isAdmin();

      match /attendance/{date} {
        allow get, list, create, update, delete: if isTeamMember(teamId) || isAdmin();
      }

      match /players/{playerId} {
        allow list, get: if isTeamMember(teamId) || isAdmin();
        allow create, update, delete: if isTeamOwner(teamId) || isAdmin();
      }

      match /staff/{staffId} {
        allow list, get: if isTeamMember(teamId) || isAdmin();
        allow create, update, delete: if isTeamOwner(teamId) || isAdmin();
      }
    }

    // ============================================================
    // üí¨ CONVERSATIONS
    // ============================================================

    match /conversations/{conversationId} {
      allow list: if isSignedIn();
      allow get, update, delete: if isSignedIn()
                                  && (
                                    resource.data.userId == request.auth.uid
                                    || isAdmin()
                                  );
      allow create: if isSignedIn()
                    && request.auth.uid == request.resource.data.userId;
    }

    // ============================================================
    // üìÖ MATCHES
    // ============================================================

    match /matches/{matchId} {
      allow get: if isSignedIn()
                  && (
                    isTeamMember(resource.data.teamId)
                    || resource.data.userId == request.auth.uid
                    || isAdmin()
                  );
      allow list: if isSignedIn();
      allow create: if isSignedIn()
                    && (
                      isTeamMember(request.resource.data.teamId)
                      || request.resource.data.userId == request.auth.uid
                    );
      allow update, delete: if isSignedIn()
                             && (
                               isTeamMember(resource.data.teamId)
                               || resource.data.userId == request.auth.uid
                               || isAdmin()
                             );
    }

    // ============================================================
    // üìÖ SESSIONS
    // ============================================================

    match /sessions/{sessionId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn()
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn()
                             && (
                               resource.data.userId == request.auth.uid
                               || isAdmin()
                             );
    }

    // ============================================================
    // üì® INVITATIONS
    // ============================================================

    match /invitations/{invitationId} {
      allow get, list, create, update, delete: if isSignedIn();
    }

    // ============================================================
    // üì¢ NOTIFICATIONS
    // ============================================================

    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // ============================================================
    // ‚ùå Colecciones obsoletas bloqueadas
    // ============================================================

    match /teamMembers/{memberId} { allow read, write: if false; }
    match /referrals/{referralId} { allow read, write: if false; }
  }
}